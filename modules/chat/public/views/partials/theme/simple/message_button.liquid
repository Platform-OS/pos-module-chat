{% liquid
  if label_key
    assign label = label_key | t
  else
    assign label = label
  endif
%}

<a href="/inbox/?to_uuid={{ to_uuid }}" class="{% if button %} button whitespace-nowrap {% endif %} chat-sendMessage {{ class }}">
  {{ label | default: defaultLabel }}
  {% if button %}
    {% theme_render_rc 'ui/icon', icon: 'commentText', class: 'w-4' %}
  {% endif %}
</a>
